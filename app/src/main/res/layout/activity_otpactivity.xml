<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPactivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="71dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="Tạo mã PIN"
        android:textColor="@color/color_main"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEnterpincode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/backgroud_edt"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingHorizontal="15dp"
        android:hint="Nhập mã pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edtConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/backgroud_edt"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Xác nhận mã PIN"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edtEnterpincode"
        app:layout_constraintStart_toStartOf="@+id/edtEnterpincode"
        app:layout_constraintTop_toBottomOf="@+id/edtEnterpincode" />

    <Button
        android:id="@+id/btn_loginPincode"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/boder_button"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/edtConfirm"
        app:layout_constraintStart_toStartOf="@+id/edtConfirm"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirm" />
</androidx.constraintlayout.widget.ConstraintLayout>